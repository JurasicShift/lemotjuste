<% layout("layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/memberstyles.css" />
<div class="container">

<%- include("layouts/partials/subnav")  %> 
<%- include("layouts/partials/alert")  %> 


<h2 class="citeTitle">New Citation</h2>

<div class="citeBorderLay">
  <form
    action="/member/home/lay"
    class="citationFormLay"
    id="citationFormLay"
    method="POST"
  >
    <label for="newQuote" class="newLabel">Quote<span>*</span></label>
    <textarea name="quote" class="newQuoteLay" id="newQuote"></textarea>
    <label for="newAuthor" class="newLabel">Author<span>*</span></label>
    <div class="newAuthor" id="newAuthor">
    <input type="text" name="surname" class="newInput" id="author1" placeholder="surname"/>
    <input type="text" name="firstname" class="newInput" id="author2" placeholder="firstname"/>
  </form>
</div>
  <div class="memberBtnDiv">
    <button class="memberBtn" id="memberBtn" type="submit" form="citationFormLay">SAVE</button>
  </div>
</div>
<div class="scrollBtnDiv"> 
  <button class="scrollBtn" id="scrollBtn">
    <i class="fas fa-chevron-up"></i>
  </button>
</div>
<script src="/js/myquotes.js" type="text/javascript"></script>

