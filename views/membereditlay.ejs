<% layout("layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/memberstyles.css" />
<div class="container">

<%- include("layouts/partials/subnav")  %> 


<h2 class="citeTitle">Update & Copy</h2>

<div class="citeBorderLay">
  <form
    action="/member/<%= quoteObj._id %>/edit?_method=PUT"
    class="citationFormLay"
    id="qtEditFormLay"
    method="POST"
  >
    <label for="newQuote" class="newLabel">Quote<span>*</span></label>
    <textarea name="quote" class="newQuoteLay" id="newQuote"><%= quoteObj.quote  %> </textarea>
    <label for="newAuthor" class="newLabel">Author<span>*</span></label>
    <div class="newAuthor" id="newAuthor">
    <input type="text" name="surname" value="<%= quoteObj.surname %>" id="author1" class="newInput"/>
    <input type="text" name="firstname" value="<%= quoteObj.firstname %>" id="author2" class="newInput"/>
    </div>
    <hr>
    <div class="copyBtnDiv">
        <p class="copyText">Copy Quote</p><button class="copyBtn" id="copyBtn" type="button"><i class="far fa-copy"></i></button><div class="thumbSetter"><i class="far fa-thumbs-up" id="thumb"></i></div>
      </div>
  </form>
  <div class="memberBtnDiv">
    <button class="memberBtn" id="memberBtn" type="submit" form="qtEditFormLay">SAVE</button>
  </div>
</div>
<div class="scrollBtnDiv"> 
  <button class="scrollBtn" id="scrollBtn">
    <i class="fas fa-chevron-up"></i>
  </button>
</div>

<script src="/js/myquotes.js" type="text/javascript"></script>
<script src="/js/editquote.js" type="text/javascript"></script>


