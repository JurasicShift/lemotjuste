<% layout("layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/memberstyles.css" />
<div class="container">
<%- include("layouts/partials/subnav")  %> 
<%- include("layouts/partials/alert")  %> 

<h2 class="citeTitle">New Citation</h2>

<div class="citeBorder">
  <form
    action="/member/home/academic"
    class="citationForm citationFlex"
    id="citationForm"
    method="POST"
  >
    <div class="citeBox1">
      <label for="newQuote" class="newLabel">Quote<span>*</span></label>
      <textarea name="quote" class="newQuote" id="newQuote"></textarea>
      <label for="newAuthor" class="newLabel">Author<span>*</span></label>
      <div class="newAuthor" id="newAuthor">
        <input type="text" name="surname" class="newInput" id="author1" placeholder="surname"/>
        <input type="text" name="firstname" class="newInput" id="author2" placeholder="firstname"/>
        </div>
    </div>
    <div class="citeBox2">
      <label for="newPage" class="newLabel">Page number</label>
      <input type="text" name="page" class="newInput" id="newPage" />
      <label for="newYear" class="newLabel">Year</label>
      <input type="text" name="year" class="newInput" id="newYear" />
      <label for="newTitle" class="newLabel">Title</label>
      <input type="text" name="title" class="newInput titleItalics" id="newTitle" />
      <label for="newPublisher" class="newLabel">Publisher</label>
      <input type="text" name="publisher" class="newInput" id="newPublisher" />
      <label for="newPlace" class="newLabel">Place</label>
      <input type="text" name="place" class="newInput" id="newPlace" />
    </div>
  </form>
  <div class="memberBtnDiv">
    <button class="memberBtn" id="memberBtn" type="submit" form="citationForm">SAVE</button>
  </div>
</div>
<div class="scrollBtnDiv"> 
  <button class="scrollBtn" id="scrollBtn">
    <i class="fas fa-chevron-up"></i>
  </button>
</div>
<script src="/js/myquotes.js" type="text/javascript"></script>
