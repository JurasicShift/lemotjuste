<% layout("layouts/boilerplate") -%>
<%- include("layouts/partials/alert")%> 
<h2 class="formTitle">Create User Account</h2>
  <div class="formBorder">
    <form action="/createAccount" class="createForm" id="createForm" method="POST">
      <label for="formUser" class="formLabel">Create Username<span>*</span></label>
      <input type="text" class="formInput" id="formUser" name="username"/>
      <label for="formEmail" class="formLabel">Enter e-mail<span>*</span></label>
      <input type="text" class="formInput" id="formEmail" name="email"/>
      <label for="formPass" class="formLabel">Create Password<span>*</span></label>
      <input type="text" class="formInput" id="formPass" name="password"/>
      <label for="formConfirmPass" class="formLabel">Confirm Password<span>*</span></label>
      <input type="text" class="formInput" id="formConfirmPass" name="conPassword"/>
      <div class="toggleDiv">
        <p class="textLabel">Academic Mode:</p>
        <label class="switch">
          <input type="checkbox" name="mode" value="true">
          <span class="slider round"></span>
        </label>
      </div>
    </form>
  <div class="btnCreateFormDiv">
    <button
      type="submit"
      form="createForm"
      class="createSubmitBtn"
      id="createSubmitBtn"
    >
      SUBMIT
    </button>
  </div>
</div>
<script src="/js/myquotes.js" type="text/javascript"></script>